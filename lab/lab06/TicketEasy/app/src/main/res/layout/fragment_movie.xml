<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kmitl.temporary.ticketeasy.fragment.MovieFragment">
    
    <ImageView
        android:layout_width="110dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:src="@drawable/android"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_movie"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_nameMovie"
        android:text="Kingsman"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_movie"
        android:layout_marginLeft="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เลือกรอบ"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameMovie"
        app:layout_constraintLeft_toRightOf="@+id/iv_movie"
        android:layout_marginLeft="27dp"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ประเภทโรง"
        app:layout_constraintLeft_toRightOf="@+id/tv_nameMovie"
        android:layout_marginLeft="59dp"
        app:layout_constraintTop_toTopOf="@+id/tv_nameMovie"
        android:layout_marginTop="5dp"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:text="18:00"
        app:layout_constraintLeft_toRightOf="@+id/iv_movie"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:id="@+id/btn_time1" />

    <Button
        android:id="@+id/btn_time2"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:text="18:30"
        app:layout_constraintLeft_toRightOf="@+id/btn_time1"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="@+id/btn_time1"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_time4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_time3"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:text="19:00"
        android:layout_marginLeft="72dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_time1"
        app:layout_constraintTop_toTopOf="@+id/btn_time2"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_time2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_time4"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:text="19:30"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_time1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_time1" />

    <Button
        android:id="@+id/btn_time5"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:text="21:00"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_time4"
        app:layout_constraintTop_toTopOf="@+id/btn_time4"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_time4"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EN/TH"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />


</android.support.constraint.ConstraintLayout>
